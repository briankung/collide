<%= form_for @implementation, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :source_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :source_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :live_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :live_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :source_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :source_code, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :concept_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :concept_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                implementations_path, :class => 'btn' %>
  </div>
<% end %>
