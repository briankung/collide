<%- model_class = Implementation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @implementation.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:source_url) %>:</strong></dt>
  <dd><%= @implementation.source_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:live_url) %>:</strong></dt>
  <dd><%= @implementation.live_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @implementation.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:source_code) %>:</strong></dt>
  <dd><%= @implementation.source_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:concept_id) %>:</strong></dt>
  <dd><%= @implementation.concept_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              implementations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_implementation_path(@implementation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              implementation_path(@implementation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
